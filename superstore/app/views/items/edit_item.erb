<h1 class="logo"><a href="/users/<%=current_user.id%>">Home</a></h1>
  <ul class="main-nav">
      <a href="/items">Items for Sale | </a>
      <a href="/items/new">Create a New Item | </a>
      <a href="/users">View Users | </a>
      <a href="/messages">View Messages | </a>
      <a href="/messages/new">New Message | </a>
      <a href="/logout">Log Out</a>
  </ul>

<h2> Welcome <%=current_user.username %>! </h2>
<h3>Edit Item: <%= @item.title.capitalize %></h3>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<% if flash.has?(:error) %>
  <%= flash[:error] %>
<% end %>
<br></br>

  <form method="post" action="/items/<%=@item.id%>/edit">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for ="title"> Title: </label>
    <input type="text" name="title" id="title" value="<%=@item.title%>">
    <label for ="price"> Price: </label>
    <input type="text" name="price" id="price" value="<%=@item.price%>">
    <label for ="description"> Description: </label>
    <input type="text" name="description" id="description" value="<%=@item.description%>"><br/><br/>
    <div><input type="submit" value="Update Item"></div><br></br>
  </form>

  <form method="post" action="/items/<%=@item.id%>/delete">
    <input type="submit" value="Delete Item">
  </form>